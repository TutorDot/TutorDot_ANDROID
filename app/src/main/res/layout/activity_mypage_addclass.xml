                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="280dp"
                android:background="#00000000"
                android:src="@drawable/my_class_tap_edit_img_yellow"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/my_class_tap_edit_img_red2"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:src="@drawable/my_class_tap_edit_img_red"
                app:layout_constraintStart_toEndOf="@+id/my_class_tap_img_yellow2"
                app:layout_constraintTop_toTopOf="@+id/my_class_tap_img_yellow2" />


            <ImageButton
                android:id="@+id/my_class_tap_edit_img_green2"
                android:layout_width="38dp"
                android:layout_height="48dp"
