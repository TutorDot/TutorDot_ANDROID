            <ImageButton
                android:id="@+id/my_class_tap_edit_img_blue2"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:src="@drawable/my_class_tap_edit_img_blue"
                app:layout_constraintStart_toEndOf="@+id/my_class_tap_edit_img_green2"
                app:layout_constraintTop_toTopOf="@+id/my_class_tap_edit_img_green2" />

            <ImageButton
                android:id="@+id/my_class_tap_edit_img_purple2"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:src="@drawable/my_class_tap_edit_img_purple"
                app:layout_constraintStart_toEndOf="@+id/my_class_tap_edit_img_blue2"
                app:layout_constraintTop_toTopOf="@+id/my_class_tap_edit_img_blue2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="345dp"
                android:lineSpacingExtra="5sp"
                android:text="시간별 금액"
                android:textColor="#0f0f0f"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="377dp"
                android:background="@drawable/my_class_tap_edit_btn_money"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
