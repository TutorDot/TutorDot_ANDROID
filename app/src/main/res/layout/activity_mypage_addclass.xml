                android:textColor="#707070"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/수업명"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="153dp"
                android:layout_marginEnd="301dp"
                android:layout_marginRight="301dp"
                android:lineSpacingExtra="5sp"
                android:text="수업명"
                android:textColor="#0f0f0f"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageButton
                android:id="@+id/my_class_add_btn_classname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@drawable/my_class_add_btn_classname"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/수업명" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/colorBackground"
                android:hint="글자수 제한 17자 이내"
                android:lineSpacingExtra="5sp"
                android:textColor="#707070"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/my_class_add_btn_classname"
                app:layout_constraintStart_toStartOf="@+id/my_class_add_btn_classname"
                app:layout_constraintTop_toTopOf="@+id/my_class_add_btn_classname" />

            <TextView
                android:id="@+id/색상"
                android:layout_width="wrap_content"
